public static void plusMinus(List<int> arr)
    {
        double p=0, n=0, z=0;
            foreach (int i in arr)
            {
                if (i > 0) p++;
                if (i < 0) n++;
                if (i == 0) z++;
            }
            Console.WriteLine(string.Format("{0:0.000000}", p / arr.Count));
            Console.WriteLine(string.Format("{0:0.000000}", n / arr.Count));
            Console.WriteLine(string.Format("{0:0.000000}", z / arr.Count));

    }
