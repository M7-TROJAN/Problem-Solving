   public static int beautifulTriplets(int d, List<int> arr)
        {
            var result = 0;

            for (var i = 0; i < arr.Count; i++)
            {
                if (arr.Contains(arr[i] + d) && arr.Contains(arr[i] + d * 2))
                {
                    result++;
                }
            }
            return result;

        }
