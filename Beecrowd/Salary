
using System;
using System.Collections.Generic;
using System.Linq;

namespace lab
{
    class Program
    {
        static void Main()
        {
            double employeeNumber = readNumber(),
                workedHours = readNumber(),
                amountPerHour=readNumber();

            Console.WriteLine("NUMBER = {0}",employeeNumber);
            Console.WriteLine("SALARY = U$ {0}", (workedHours*amountPerHour).ToString(".00"));

        }
        static double readNumber() => double.Parse(Console.ReadLine());

    }

}

